{
  "name": "vue-scrollview",
  "version": "2.2.1",
  "description": "A Vue.js component for detecting when components are visible in the viewport via the Vue.js scoped slots api.",
  "author": "Chris Hurlburt <hurlburt.chris@gmail.com>",
  "main": "dist/vue-scrollview.common.js",
  "module": "dist/vue-scrollview.esm.js",
  "browser": "dist/vue-scrollview.js",
  "unpkg": "dist/vue-scrollview.js",
  "style": "dist/vue-scrollview.css",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "node build/build.js",
    "app": "cd ./test/e2e/test-app && webpack-dev-server --inline --progress --config build/webpack.dev.conf.js",
    "lint": "eslint --ext js --ext jsx --ext vue src test/**/*.spec.js test/*.js build",
    "lint:staged": "lint-staged",
    "pretest": "npm run lint",
    "e2e": "node test/e2e/runner.js",
    "unit": "jest test/unit/specs",
    "test": "npm run unit && npm run e2e",
    "prepublish": "npm run build"
  },
  "lint-staged": {
    "src/**/*.{vue,jsx,js}": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.{vue,css}": [
      "stylefmt",
      "stylelint"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "setupFiles": [
      "<rootDir>/test/unit/setup"
    ],
    "mapCoverage": true,
    "coverageDirectory": "<rootDir>/test/unit/coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,vue}",
      "!src/main.js",
      "!**/node_modules/**"
    ]
  },
  "pre-commit": "lint:staged",
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "add-asset-html-webpack-plugin": "^1.0.2",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-helper-vue-jsx-merge-props": "^2.0.2",
    "babel-loader": "^6.3.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-vue-jsx": "^3.3.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.22.0",
    "babel-jest": "^21.0.2",
    "jest": "^21.2.0",
    "vue-jest": "^1.0.2",
    "node-notifier": "^5.1.2",
    "chromedriver": "^2.27.2",
    "cross-spawn": "^5.0.1",
    "nightwatch": "^0.9.12",
    "selenium-server": "^3.0.1",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.8",
    "semver": "^5.3.0",
    "shelljs": "^0.7.6",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "ora": "^1.2.0",
    "chalk": "^2.0.1",
    "copy-webpack-plugin": "^4.0.1",
    "buble": "^0.15.2",
    "clean-css": "^4.0.8",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "eventsource-polyfill": "^0.9.6",
    "eslint": "^3.16.1",
    "eslint-config-vue": "^2.0.2",
    "eslint-plugin-vue": "^2.0.1",
    "extract-text-webpack-plugin": "^2.0.0",
    "file-loader": "^1.1.4",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "lint-staged": "^3.3.1",
    "mkdirp": "^0.5.1",
    "postcss": "^5.2.15",
    "postcss-cssnext": "^2.9.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.0",
    "url-loader": "^0.5.8",
    "rollup": "^0.41.4",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-jsx": "^1.0.3",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-postcss": "^0.2.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-vue": "^2.2.20",
    "style-loader": "^0.13.1",
    "stylefmt": "^5.1.2",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-processor-html": "^1.0.0",
    "uppercamelcase": "^1.1.0",
    "vue": "^2.5.7",
    "vue-loader": "^13.3.0",
    "vue-style-loader": "^3.0.1",
    "portfinder": "^1.0.13",
    "vue-template-compiler": "^2.5.7",
    "webpack": "^3.6.0",
    "webpack-bundle-analyzer": "^2.3.0",
    "webpack-dashboard": "^0.3.0",
    "webpack-dev-server": "^2.9.1",
    "webpack-merge": "^4.1.0",
    "yarn-or-npm": "^2.0.3"
  },
  "peerDependencies": {
    "vue": "^2.1.10"
  },
  "dllPlugin": {
    "name": "vuePluginTemplateDeps",
    "include": [
      "mocha/mocha.js",
      "style-loader!css-loader!mocha-css",
      "html-entities",
      "vue/dist/vue.js",
      "chai",
      "core-js/library",
      "url",
      "sockjs-client",
      "vue-style-loader/lib/addStylesClient.js",
      "events",
      "ansi-html",
      "style-loader/addStyles.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrishurlburt/vue-scrollview.git"
  },
  "bugs": {
    "url": "https://github.com/chrishurlburt/vue-scrollview/issues"
  },
  "homepage": "https://github.com/chrishurlburt/vue-scrollview#readme",
  "license": {
    "type": "MIT",
    "url": "http://www.opensource.org/licenses/mit-license.php"
  },
  "dependencies": {
    "lodash.flowright": "^3.5.0",
    "lodash.some": "^4.6.0",
    "lodash.throttle": "^4.1.1"
  }
}
